@model OrderViewModel

@{
    ViewData["Title"] = "View";
}

    <h2 class="text-center">Order</h2>

<hr />
<div class="container">
    <div class="row">
        @if (Model?.BookToOrder.Id >= 0)
        {
        <div class="col-md-10">
            <h5>You have selected the following book.</h5>
            <div class="row">
                <div class="col-md-4">
                    <h5> @Model.BookToOrder.Title</h5>
                    <img src="~/Images/@Model.BookToOrder.Image"/>
                </div>
                <div class="col-md-4">
                    <h4>Price: @Model.BookToOrder.Price $</h4>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.OrderDetails.ClientName" class="control-label"></label>
                    <input asp-for="@Model.OrderDetails.ClientName" class="form-control" required/>
                    <span asp-validation-for="@Model.OrderDetails.ClientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.OrderDetails.Street" class="control-label"></label>
                    <input asp-for="@Model.OrderDetails.Street" class="form-control" required/>
                    <span asp-validation-for="@Model.OrderDetails.Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.OrderDetails.State" class="control-label"></label>
                    <input asp-for="@Model.OrderDetails.State" class="form-control"required />
                    <span asp-validation-for="@Model.OrderDetails.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.OrderDetails.Country" class="control-label"></label>
                    <input asp-for="@Model.OrderDetails.Country" class="form-control" required/>
                    <span asp-validation-for="@Model.OrderDetails.Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.OrderDetails.Zip" class="control-label"></label>
                    <input asp-for="@Model.OrderDetails.Zip" class="form-control" required/>
                    <span asp-validation-for="@Model.OrderDetails.Zip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.OrderDetails.Phone" class="control-label"></label>
                    <input asp-for="@Model.OrderDetails.Phone" class="form-control" required/>
                    <span asp-validation-for="@Model.OrderDetails.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.OrderDetails.Email" class="control-label"></label>
                    <input asp-for="@Model.OrderDetails.Email" class="form-control" required/>
                    <span asp-validation-for="@Model.OrderDetails.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"  />
                </div>
            </form>
        </div>
        }
        else
        {
            <div><p>You haven't selected a book!</p></div>
        }
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
