@model Medicine
@{
    ViewData["Title"] = "Details";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.Title</h1>
        <h5>@Model.Price$</h5>
    </div>
</section>
<div class="container">
    <div class="row">
        <div class="col-lq-4">
            <img class="bd-placeholder-img rounded-circle" width="140" height="200" src="~/Images/@Model.Image" class="img-fluid" />
        </div>
        <div class="col-lq-8">
            <p>@Model.Description</p>
            <a class="btn btn-lg btn-primary" href="/home/order/@Model.Id">Buy</a>
        </div>
    </div>
</div>