@model IEnumerable<Carousel>
@{
    int count = 0;
}
    <div id="myCarousel" class="carousel slide" data-ride="carousel" margin="50">

        <style>
            #myCarousel {
                background-color:cornflowerblue;
            }
        </style>
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            @foreach (var item in Model)
            {

                <div class="carousel-item @(count == 0 ? "active" : "")">

                    @switch (count++)
                    {
                        case 0:
                            <img class="first-slide" src="~/Images/images.jpg" alt="First slide" width="200" height="200" />
                            <rect width="100%" height="100%" fill="#777" />
                            break;
                        case 1:
                            <img class="second-slide" src="~/Images/images (1).jpg" alt="Second slide" width="200" height="200" />
                            <rect width="100%" height="100%" fill="#777" />
                            break;
                        case 2:
                            <img class="third-slide" src="~/Images/images (3).jpg" alt="Third slide" width="200" height="200" />
                            <rect width="100%" height="100%" fill="#777" />
                            break;
                    }

                    <div class="container">
                        <div class="carousel-caption text-left">
                            <p>
                                <h1></h1><br />
                            <p>@item.Description...</p>
                            <a class="btn btn-lg btn-primary" href="/home/medicinelist/@item.Id" role="button">@item.Title</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>