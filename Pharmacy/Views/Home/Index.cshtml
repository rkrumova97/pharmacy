@model HomeIndexViewModel
@{
    ViewData["Title"] = "Index";
}

@Html.Partial("_Carousel", Model.Carousels);

 <div class="container marketing">

    <!-- Three columns of text below the carousel -->
     <div class="row">
         @foreach (var item in Model.Books)
         {
             <div class="col-lg-4">
                 <img class="bd-placeholder-img rounded-circle" width="140" height="140" src="~/Images/@item.Image" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 140x140"><title>Placeholder</title><rect width="100%" height="100%" fill="#777" />
                 <h5>@item.Title</h5>
                 <p><a class="btn btn-secondary" href="/home/details/@item.Id">View details</a></p>
             </div><!-- /.col-lg-4 -->
         }
     </div><!-- /.row -->
</div>


 
